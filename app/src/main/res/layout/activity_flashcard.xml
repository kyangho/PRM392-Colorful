<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_smoke"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".activity.FlashcardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/img_exist"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@color/white_smoke"
            android:gravity="start"
            app:srcCompat="@drawable/ic_baseline_close_24"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/tv_flash_card_number"
            android:layout_width="139dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="60dp"
            android:gravity="center"
            android:text="1/13"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="50dp"
        android:onClick="flipCard">


        <FrameLayout
            android:id="@+id/card_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_white">

            <TextView
                android:id="@+id/tv_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="back"
                android:textColor="@color/gray"
                android:textSize="30dp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/card_front"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_white"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_front"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="front"
                android:textColor="@color/gray"
                android:textSize="30dp" />
        </FrameLayout>
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="@color/primary"
        android:gravity="center"
        android:text="Tap to flip"
        android:textColor="@color/white"
        android:textSize="30dp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/img_flash_pre"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/round_button"
            android:gravity="start"
            app:srcCompat="@drawable/ic_baseline_keyboard_return_24"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="50dp"
            android:gravity="center"
            android:text="dsda"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/img_flash_next"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/round_button"
            android:gravity="start"
            app:srcCompat="@drawable/ic_baseline_arrow_right_24"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

</LinearLayout>