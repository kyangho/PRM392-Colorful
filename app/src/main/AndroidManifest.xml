<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.coloful">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PRM392_Colorful"
        tools:targetApi="31">
        <activity
            android:name=".ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".activity.AboutAppActivity"
            android:exported="true"
            android:label="@string/about_app" />
        <activity
            android:name=".activity.ChangePasswordActivity"
            android:exported="true"
            android:label="@string/change_password" />
        <activity
            android:name=".activity.ChangeEmailActivity"
            android:exported="true"
            android:label="@string/change_email" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ChangeUsernameActivity"
            android:exported="true"
            android:label="@string/change_username" />
    </application>

</manifest>