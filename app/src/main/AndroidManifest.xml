        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PRM392_Colorful"
        tools:targetApi="31">
        <activity
            android:name=".activity.ResultActivity"
            android:exported="false" />
        <activity
            android:name=".activity.FlashcardActivity"
            android:exported="true" />
        <activity
            android:name=".activity.LearningActivity"
            android:exported="true"
            android:label="@string/study_set_details" />
        <activity
            android:name=".activity.StudySetDetailsActivity"
            android:exported="true"
            android:label="@string/study_set_details" />
        <activity
            android:name=".activity.CreateStudySetActivity"
            android:exported="false"
            android:label="@string/createSet" />
        <activity
            android:name=".activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.OptionPracticeActivity"
            android:exported="true" />
        <activity
            android:name=".activity.AboutAppActivity"
            android:exported="true"
            android:label="@string/about_app" />
        <activity
            android:name=".activity.ChangePasswordActivity"
            android:exported="true"
            android:label="@string/change_password" />
        <activity
            android:name=".activity.ChangeEmailActivity"
            android:exported="true"
            android:label="@string/change_email" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="true"
            android:label="@string/app_name" />
        <activity
            android:name=".activity.LogInActivity"
            android:exported="true" />
        <activity
            android:name=".activity.ChangeUsernameActivity"
            android:exported="true"
            android:label="@string/change_username" />
        <activity
            android:name=".activity.SignUpActivity"
            android:exported="false"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/Theme.PRM392_Colorful.NoActionBar" />
        <activity
            android:name=".activity.LandingActivity"
            android:exported="false" />
    </application>

</manifest>